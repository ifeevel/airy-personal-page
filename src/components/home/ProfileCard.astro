---
/**
 * ProfileCard.astro
 * 个人信息卡片组件 - 用于首页展示头像、昵称、签名、地址
 *
 * 功能：
 * 1. 展示用户头像（带动画效果）
 * 2. 展示昵称和签名
 * 3. 展示地理位置信息
 *
 * Props:
 * - avatar: 头像图片（Astro ImageMetadata）
 * - author: 昵称
 * - slogan: 签名（可选）
 * - address: 地址（可选）
 */

import { Image } from "astro:assets";
import type { ProfileCardProps as Props } from "@appTypes/site";

const { avatar, author, slogan, address } = Astro.props;
---

<div class="profile-card">
    <!-- 头像区域 -->
    {avatar && (
        <div class="profile-card__avatar animate-fade-in-up-fast">
            <Image
                src={avatar}
                alt="Avatar"
                class="profile-card__avatar-img"
                loading="eager"
                fetchpriority="high"
                width={280}
                height={280}
                densities={[1, 2]}
                quality={90}
                decoding="async"
            />
        </div>
    )}

    <!-- 信息区域 -->
    <div class="profile-card__info animate-fade-in-up">
        <h1 class="profile-card__name">{author}</h1>

        {slogan && (
            <p class="profile-card__slogan">{slogan}</p>
        )}

        {address && (
            <div class="profile-card__location">
                <svg class="profile-card__location-icon" viewBox="0 0 1024 1024" xmlns="http://www.w3.org/2000/svg">
                    <path d="M527.053 96.924c-169.131 0.322-306.127 137.496-306.127 306.7 0 157.986 128.978 324.17 278.121 502.935 7.838 9.418 17.977 14.485 28.006 15.061 10.029-0.576 20.168-5.643 28.002-15.061 149.144-178.765 278.123-344.948 278.123-502.935 0-169.205-136.997-306.378-306.126-306.7zM527.053 500.967c-66.070-0.358-119.562-53.956-119.562-120.099s53.492-119.74 119.562-120.099c66.069 0.358 119.557 53.956 119.557 120.099s-53.487 119.74-119.557 120.099z"></path>
                </svg>{address}
            </div>
        )}
    </div>
</div>

<style>
    /* ============================================================================
     * ProfileCard 组件样式
     * ============================================================================ */
    .profile-card {
        text-align: center;
        font-weight: 300;
    }

    /* 头像样式 */
    .profile-card__avatar-img {
        border-radius: 50%;
        width: 8.75rem;
        height: 8.75rem;
        object-fit: cover;
        /* 阴影 + 呼吸边框 */
        box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.1);
        border: 0.25rem solid rgba(255, 255, 255, 0.8);
    }
    :global(.dark) .profile-card__avatar-img {
        border: 0.25rem solid rgba(42, 42, 42, 0.8);
    }
    /* 昵称样式 */
    .profile-card__name {
        font-size: 1.875rem;
        margin: 1.25rem 0;
    }

    /* 签名样式 */
    .profile-card__slogan {
        font-size: 1rem;
        font-weight: inherit;
        line-height: 1.875rem;
        width: 70%;
        margin: 1.25rem auto;
    }

    /* 地理位置样式 */
    .profile-card__location {
        color: var(--text-primary);
        line-height: 1.8;
        font-size: 0.875rem;
    }

    /* 地理位置图标样式 */
    .profile-card__location-icon {
        margin-right: 0.375rem;
        vertical-align: middle;
        width: 1rem;
        height: 1rem;
        display: inline-block;
        margin-top: -0.125rem;
        fill: var(--text-secondary);
    }

    /* 移动端适配 */
    @media (max-width: 48rem) {
        .profile-card__slogan {
            width: 100%;
        }
    }
</style>
