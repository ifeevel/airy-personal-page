---
/**
 * NavLinks.astro
 * 导航链接组件 - 用于首页/404页的链接列表展示
 *
 * 功能：
 * 1. 展示下划线风格的导航链接
 * 2. 支持悬停高亮效果
 * 3. 支持点击缩放反馈
 * 4. 支持键盘导航无障碍设计
 *
 * Props:
 * - items: 导航项数组 [{ name: string, path: string }]
 */

import type { NavLinksProps as Props } from "@appTypes/site";

const { items } = Astro.props;
---

<nav class="nav-links animate-fade-in-up-delayed">
    <ul class="nav-links__list">
        {
            items.map((item) => (
                <li class="nav-links__item">
                    <a
                        href={item.path || "#"}
                        class="nav-links__link"
                        data-astro-prefetch="viewport"
                    >
                        {item.name}
                    </a>
                </li>
            ))
        }
    </ul>
</nav>

<style>
    /* ============================================================================
     * NavLinks 组件样式
     * ============================================================================ */
    .nav-links {
        margin-top: 1.25rem;
    }

    .nav-links__list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .nav-links__item {
        display: inline-block;
        margin: 0.375rem;
    }

    .nav-links__link {
        color: var(--link-color);
        text-decoration-line: underline;
        text-decoration-style: solid;
        text-decoration-thickness: 1px;
        text-underline-offset: 0.3rem;

        /* 
         * 组合过渡效果：
         * - color: 颜色变化
         * - text-decoration-thickness: 下划线加粗
         * - transform: 轻微缩放（点击反馈）
         */
        transition:
            color 0.3s ease,
            text-decoration-thickness 0.3s ease,
            text-underline-offset 0.3s ease,
            transform 0.2s var(--bezier);

        /* 为了支持 transform 动画，设置 display 为 inline-block */
        display: inline-block;
        /* 防止文字在缩放时模糊 */
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
    }

    /* 悬停状态：颜色高亮 + 下划线加粗 + 字体加粗 */
    .nav-links__link:hover {
        color: var(--link-hover);
        text-decoration-thickness: 2px;
        text-underline-offset: 0.25rem;
        font-weight: 400;
    }

    /* 活跃/点击状态：轻微缩放效果 - 模拟物理按压的质感反馈 */
    .nav-links__link:active {
        transform: scale(0.95);
    }

    /* 焦点状态：支持键盘导航的无障碍设计 */
    .nav-links__link:focus-visible {
        outline: 2px solid var(--link-hover);
        outline-offset: 0.25rem;
    }
</style>
