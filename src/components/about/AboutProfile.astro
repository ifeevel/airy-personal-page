---
/* AboutProfile.astro
 * 关于页面的个人资料组件
 *
 * Props:
 * - profile: 包含头像、姓名和描述信息的对象
 *
 */

import { Image } from "astro:assets";
import type { AboutProfileProps as Props } from "@appTypes/site";

const { profile } = Astro.props;
---

<section class="profile-section">
    <!-- 头像区域 -->
    {
        profile.avatar && (
            <div class="animate-fade-in-up-fast">
                <Image
                    src={profile.avatar}
                    alt={profile.name}
                    width={256}
                    height={256}
                    densities={[1, 2]}
                    quality={90}
                    class="profile-avatar"
                    loading="eager"
                    fetchpriority="high"
                    decoding="async"
                />
            </div>
        )
    }

    <!-- 信息区域 -->
    <div class="profile-info animate-fade-in-up">
        <h1 class="profile-name">{profile.name}</h1>
        <p class="profile-desc">{profile.description}</p>
    </div>
</section>
