---
/**
 * about.astro
 * 关于页
 *
 * 结构：
 * - BaseLayout: 基础布局
 * - AboutProfile: 个人简介组件
 * - BentoGrid: Bento 展示组件
 * 数据：
 * - getSiteConfig: 获取站点配置（站点信息、关于页信息）
 * 样式：
 * - about.css: 页面专用样式
 */

import BaseLayout from "@layouts/BaseLayout.astro";
import AboutProfile from "@components/about/AboutProfile.astro";
import BentoGrid from "@components/about/BentoGrid.astro";
import { getSiteConfig } from "@utils/config";
import type { BentoItemData } from "@appTypes/site";

import "@components/about/about.css";

const { site: siteConfig, about: aboutConfig } = await getSiteConfig();
const bentoData = aboutConfig.bento as BentoItemData[];

const profile = {
    name: siteConfig.author,
    avatar: siteConfig.avatar,
    description: aboutConfig.description,
};
---

<BaseLayout title={`关于 - ${profile.name}`} description={profile.description}>
    <main class="about-container">
        <!-- 个人简介区 -->
        <AboutProfile profile={profile} />

        <!-- Bento 展示区 -->
        <BentoGrid bento={bentoData} />
    </main>
</BaseLayout>
